<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fav_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/size_15"
    android:layout_marginVertical="@dimen/size_5"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/size_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ã’"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <View
                android:id="@+id/btn_down"
                android:layout_width="@dimen/size_10"
                android:layout_height="@dimen/size_6"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@drawable/ic_svg_arrow_down_primary" />

            <View
                android:id="@+id/btn_up"
                android:layout_width="@dimen/size_10"
                android:layout_height="@dimen/size_6"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@drawable/ic_svg_arrow_down_primary"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/group_sub_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="@dimen/size_14"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>