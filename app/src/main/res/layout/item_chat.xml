<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtChatMsg"
        android:padding="@dimen/size_7"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_6"
        android:layout_marginTop="@dimen/size_6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        android:background="@drawable/chat_text_bg"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtChatMsgRes"
        android:padding="@dimen/size_7"
        android:layout_marginLeft="@dimen/size_6"
        android:layout_marginRight="@dimen/size_30"
        android:layout_marginTop="@dimen/size_6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"
        android:background="@drawable/chat_res_text_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>