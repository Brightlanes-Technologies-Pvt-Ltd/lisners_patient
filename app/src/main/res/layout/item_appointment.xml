<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/size_10">

        <View
            android:id="@+id/v_image"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_80" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/size_5"
            android:layout_marginEnd="@dimen/size_2"
            android:layout_toEndOf="@+id/v_image"
            app:cardCornerRadius="@dimen/size_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/size_50"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/size_10">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/price_layout"
                            android:fontFamily="@font/poppins_medium"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/primary"
                            android:textSize="@dimen/size_12"
                            tools:ignore="SpUsage" />


                        <TextView
                            android:id="@+id/tv_profession"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_name"
                            android:background="@drawable/border_semi_round_primary_background"
                            android:fontFamily="@font/poppins_medium"
                            android:includeFontPadding="false"
                            android:padding="@dimen/size_2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_10"
                            tools:ignore="SpUsage" />



                        <TextView
                            android:id="@+id/tv_spacialize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_profession"
                            android:fontFamily="@font/poppins_medium"
                            android:includeFontPadding="false"
                            android:textColor="@color/textGrey"
                            android:textSize="@dimen/size_12"
                            tools:ignore="SpUsage" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/status_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="@dimen/size_3"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text=""
                                android:includeFontPadding="false"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="7sp" />

                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_below="@id/status_card"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/price_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_phone_icon"
                                android:layout_width="@dimen/size_10"
                                android:layout_height="@dimen/size_10"
                                android:src="@drawable/ic_svg_phonecall" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/tvPrice"
                                android:maxWidth="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_5"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/size_10"
                                tools:ignore="SpUsage" />
                        </LinearLayout>


                    </RelativeLayout>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="@dimen/size_10"
                                android:layout_height="@dimen/size_10"
                                android:src="@drawable/ic_svg_blue_appointment"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/size_5"
                                android:fontFamily="@font/poppins_regular"
                                android:includeFontPadding="false"

                                android:textColor="@color/black"
                                android:textSize="@dimen/size_10"
                                tools:ignore="SpUsage" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_10"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="@dimen/size_10"
                                android:layout_height="@dimen/size_10"
                                android:src="@drawable/ic_svg_clock"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/size_5"
                                android:fontFamily="@font/poppins_regular"
                                android:includeFontPadding="false"

                                android:textColor="@color/black"
                                android:textSize="@dimen/size_10"
                                tools:ignore="SpUsage" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!--<View
                    android:layout_width="@dimen/size_5"
                    android:layout_height="@dimen/size_18"
                    android:layout_marginEnd="@dimen/size_10"
                    android:background="@drawable/ic_svg_menu_icon" />
-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:elevation="@dimen/size_4">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:layout_margin="@dimen/size_6"
                app:cardCornerRadius="@dimen/size_10"
                app:cardElevation="@dimen/size_6">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/size_80"
                    android:layout_height="@dimen/size_80"
                    android:src="@drawable/button_light_primary"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_short_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="AS"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/size_30"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </RelativeLayout>
</layout>
