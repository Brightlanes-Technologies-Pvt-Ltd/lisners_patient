<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.lisners.patient.Activity.Home.HomeStack.ConsultationDetailsFragment">

    <include layout="@layout/round_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_10"
            tools:ignore="UselessLeaf">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/size_10">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="@dimen/size_100"
                    android:layout_gravity="center|center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/button_light_primary"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/profile_char_name"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="@dimen/size_100"
                    android:layout_gravity="center|center_horizontal"
                    android:text="Ab"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_50"
                    android:gravity="center"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_profile"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/size_10"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:id="@+id/tv_counselor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="@color/primary"
                        android:textSize="@dimen/size_14"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/tv_profession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_semi_round_primary_background"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        android:padding="@dimen/size_4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/tv_counselor_specialize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_10"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/tv_time_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_12"
                        tools:ignore="SpUsage" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Prescription"
                android:textColor="@color/black"
                android:textSize="@dimen/size_18"
                tools:ignore="SpUsage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/size_10"
                android:background="@drawable/border_round_card_background"
                android:orientation="vertical"
                android:padding="@dimen/size_10">

                <TextView
                    android:id="@+id/tv_prescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                     android:textColor="@color/primary"
                    android:textSize="@dimen/size_12"
                    tools:ignore="SpUsage" />

<!--                <ImageView-->
<!--                    android:layout_width="@dimen/size_20"-->
<!--                    android:layout_height="@dimen/size_20"-->
<!--                    android:layout_gravity="end"-->
<!--                    android:background="@drawable/circle_icon_white_background"-->
<!--                    android:padding="@dimen/size_4"-->
<!--                    android:src="@drawable/ic_svg_arrow_down_primary"-->
<!--                    tools:ignore="ContentDescription" />-->

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Call History"
                android:textColor="@color/black"
                android:textSize="@dimen/size_18"
                tools:ignore="SpUsage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/size_10"
                android:background="@drawable/border_round_card_background"
                android:orientation="vertical"
                android:padding="@dimen/size_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_history_date_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        android:text="Call Charges"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14"
                        tools:ignore="SpUsage" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_5">

                    <TextView
                        android:id="@+id/tv_call_sec"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_12"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/tv_call_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="@color/primary"
                        android:textSize="@dimen/size_12"
                        tools:ignore="SpUsage" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Reviews"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_18"
                    tools:ignore="SpUsage" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/size_12"
                        android:layout_height="@dimen/size_12"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/ic_svg_star" />

                    <View
                        android:layout_width="@dimen/size_12"
                        android:layout_height="@dimen/size_12"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/ic_svg_star" />

                    <View
                        android:layout_width="@dimen/size_12"
                        android:layout_height="@dimen/size_12"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/ic_svg_star" />

                    <View
                        android:layout_width="@dimen/size_12"
                        android:layout_height="@dimen/size_12"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/ic_svg_star" />

                    <View
                        android:layout_width="@dimen/size_12"
                        android:layout_height="@dimen/size_12"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/ic_svg_empty_star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:includeFontPadding="false"
                        android:text="(4.0)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_12"
                        tools:ignore="SpUsage" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="@dimen/size_10"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:text="Psychologist Nicholas Doyle treated my father. He was thorough with his evaluation, kind, andinformative."
                    android:textColor="@color/textGrey"
                    android:textSize="@dimen/size_12"
                    tools:ignore="SpUsage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                 >
      <LinearLayout
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/size_10"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Reviews"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_18"
                    tools:ignore="SpUsage" />
                <TextView
                    android:id="@+id/tv_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15"
                    tools:ignore="SpUsage" />
                 </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/size_1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:stepSize="0.5"
                        android:rating="0"
                        android:max="5"
                        android:theme="@style/RatingBar"
                       />

                    <!--                    <include layout="@layout/item_star_fill" />-->

<!--                    <include layout="@layout/item_star_fill" />-->

<!--                    <include layout="@layout/item_star_fill" />-->

<!--                    <include layout="@layout/item_star_fill" />-->

<!--                    <include-->
<!--                        layout="@layout/item_star_empty"-->
<!--                        android:layout_height="25dp" />-->


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_notes_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_round_card_background"
                    android:layout_marginVertical="@dimen/size_10">
                    <TextView
                        android:id="@+id/tv_review_comment_patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_10"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/size_12"
                        tools:ignore="SpUsage" />
                    <EditText
                        android:id="@+id/edit_text_review_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="top"
                        android:hint="Patient Comment..."
                        android:includeFontPadding="false"
                        android:padding="@dimen/size_10"
                        android:text=""
                        android:textColor="@color/primary"
                        android:textSize="@dimen/size_12"
                        tools:ignore="Autofill,SpUsage" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/size_40"
                    android:layout_marginBottom="@dimen/size_10"
                    android:background="@drawable/button_primary"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="@dimen/size_25"
                    android:paddingVertical="@dimen/size_5"
                    android:text="SUBMIT REVIEW"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16"
                    tools:ignore="SpUsage" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>