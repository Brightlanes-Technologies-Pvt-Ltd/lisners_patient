<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.lisners.patient.Activity.Home.HomeStack.AddMoneyWalletFragment">

    <include layout="@layout/round_detailed_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/size_15"
            android:paddingVertical="@dimen/size_10"
            tools:ignore="UselessLeaf">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Amount"
                android:textColor="@color/primary"
                android:textSize="@dimen/size_18"
                tools:ignore="SpUsage" />

            <EditText
                android:id="@+id/edit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:hint="â‚¹  Enter amount"
                android:inputType="phone"
                android:padding="@dimen/size_15"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/size_20"
                tools:ignore="Autofill,SpUsage" />

            <Button
                android:id="@+id/btn_add_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/size_40"
                android:paddingHorizontal="@dimen/size_30"
                android:background="@drawable/button_primary"
                android:fontFamily="@font/poppins_semi_bold"
                android:includeFontPadding="false"
                android:text="Add Money"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16"
                tools:ignore="SpUsage" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>