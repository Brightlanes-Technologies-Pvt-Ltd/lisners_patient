<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.lisners.patient.Activity.Home.HomeStack.FavouriteFragment">

    <include layout="@layout/round_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavourite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/size_5" />
        <TextView
            android:id="@+id/tv_no_result"
            android:visibility="gone"
            android:textSize="@dimen/size_16"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="No Favourite Found"
            android:layout_margin="@dimen/size_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</LinearLayout>