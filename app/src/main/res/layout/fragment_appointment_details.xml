<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <include layout="@layout/round_header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_10"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_5">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/size_1"
                        app:cardCornerRadius="@dimen/size_10"
                        app:cardElevation="@dimen/size_1"
                        android:layout_width="@dimen/size_80"
                        android:layout_height="@dimen/size_80">

                        <ImageView
                            android:id="@+id/iv_profile"
                            android:src="@drawable/button_light_primary"
                            android:layout_width="@dimen/size_80"
                            android:layout_height="@dimen/size_80"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:id="@+id/tv_short_name"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="@color/primary"
                            android:text="AS"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/size_30"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/size_10">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginRight="@dimen/size_6"
                                android:orientation="vertical">

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_user_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:includeFontPadding="false"
                                        android:text="Ellianor Rodrigues"
                                        android:textColor="@color/primary"
                                        android:textSize="@dimen/size_14" />

                                    <View
                                        android:id="@+id/v_live_status"
                                        android:layout_width="@dimen/size_8"
                                        android:layout_height="@dimen/size_8"
                                        android:layout_marginLeft="@dimen/size_5"
                                        android:background="@drawable/online_bot" />

                                </LinearLayout>

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_specialize"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/size_12" />

                                    <!--                                <View-->
                                    <!--                                    android:layout_width="@dimen/size_8"-->
                                    <!--                                    android:layout_height="@dimen/size_8"-->
                                    <!--                                    android:layout_marginLeft="@dimen/size_5"-->
                                    <!--                                    android:background="@drawable/online_bot" />-->

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">

                                <ImageButton
                                    android:layout_width="@dimen/size_30"
                                    android:layout_height="@dimen/size_12"
                                    android:background="@color/transparent"
                                    android:src="@drawable/ic_svg_star" />

                                <TextView
                                    android:id="@+id/tv_ratting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/size_5"
                                    android:fontFamily="@font/poppins_medium"
                                    android:includeFontPadding="false"
                                    android:layout_gravity="center"
                                    android:text=" "
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/size_14" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/size_10"
                            android:paddingVertical="@dimen/size_10">

                            <View
                                android:layout_width="@dimen/size_10"
                                android:layout_height="@dimen/size_10"
                                android:background="@drawable/ic_svg_pin_location" />

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_regular"

                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/size_12" />

                            <ImageButton
                                android:id="@+id/ib_favourite"
                                android:layout_width="@dimen/size_30"
                                android:layout_height="@dimen/size_15"
                                android:background="@color/transparent"
                                android:src="@drawable/ic_svg_heart" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:background="@drawable/border_semi_round_background"
                    android:orientation="vertical"
                    android:padding="@dimen/size_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="About"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="Select Availability : Date"
                        android:layout_marginBottom="@dimen/size_10"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_left_side"
                            android:layout_marginRight="@dimen/size_10"
                            android:layout_marginLeft="@dimen/size_5"
                            android:src="@drawable/ic_arrow_left"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_25"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_dates"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/iv_right_side"
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_marginRight="@dimen/size_5"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_25"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="Select Availability : Time"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/size_5">
                        <TextView
                            android:id="@+id/tv_availability"
                            android:visibility="gone"
                            android:text="No Availability"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/size_16"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>



                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/size_10"
                        android:paddingVertical="@dimen/size_10">
                        <RadioButton
                            android:id="@+id/rb_phone"
                            android:layout_width="@dimen/size_32"
                            android:layout_height="@dimen/size_32"/>

                        <View
                            android:layout_width="25dp"
                            android:layout_height="@dimen/size_32"
                            android:background="@drawable/ic_svg_phone" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:text="Voice Call"
                                android:textColor="@color/black"
                                android:textSize="@dimen/size_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Can make a voice call"
                                android:textColor="@color/black"
                                android:textSize="@dimen/size_10" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_phone_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:includeFontPadding="false"
                            android:text="₹3/min"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/size_16" />
                    </LinearLayout>

                    <include layout="@layout/single_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/size_10"
                        android:paddingVertical="@dimen/size_10">
                        <RadioButton
                            android:id="@+id/rb_video"
                            android:layout_width="@dimen/size_32"
                            android:layout_height="@dimen/size_32"/>
                        <View
                            android:layout_width="@dimen/size_32"
                            android:layout_height="@dimen/size_32"
                            android:background="@drawable/ic_svg_video" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:text="Video Call"
                                android:textColor="@color/black"
                                android:textSize="@dimen/size_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Can make a video call"
                                android:textColor="@color/black"
                                android:textSize="@dimen/size_10" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_video_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:includeFontPadding="false"
                            android:text="₹3/min"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/size_16" />
                    </LinearLayout>
                </RadioGroup>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="Add notes"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/edit_notes"
                        android:textSize="@dimen/size_10"
                        android:lines="5"
                        android:gravity="start"
                        android:padding="@dimen/size_5"
                        android:background="@drawable/border_semi_round_background"
                        android:hint="Your message must be greater than 100 character.."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout

                    android:padding="@dimen/size_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_live_call"
                        android:visibility="gone"
                        android:text="Call Now"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:background="@drawable/button_light_primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="@dimen/size_10"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/btn_book_new"
                        android:text="Book Appointment"
                        android:textColor="@color/white"
                        android:background="@drawable/button_primary"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>